# ---- Application Database ----
DATABASE_URL=postgresql://user:password@localhost:5432/chatbot_db

# ---- LLM Provider ----
OPENROUTER_API_KEY=your_openrouter_api_key
LLM_MODEL_NAME=google/gemini-1.5-pro-latest

# ---- ClickHouse Configuration (Required for Langfuse v3) ----
CLICKHOUSE_URL=http://clickhouse:8123
CLICKHOUSE_MIGRATION_URL=clickhouse://clickhouse:9000
CLICKHOUSE_USER=langfuse
CLICKHOUSE_PASSWORD=your_secure_clickhouse_password_here
CLICKHOUSE_DB=langfuse
CLICKHOUSE_CLUSTER_ENABLED=false

# ---- Langfuse PostgreSQL Database ----
LANGFUSE_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/langfuse

# ---- Redis Connection ----
REDIS_CONNECTION_STRING=redis://redis:6379

# ---- Langfuse Service Configuration (REQUIRED - Generate with: openssl rand -hex 32) ----
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_with_32_char_hex_secret_generated_by_openssl
SALT=replace_with_32_char_hex_salt_generated_by_openssl
ENCRYPTION_KEY=replace_with_32_char_hex_encryption_key_generated_by_openssl

# ---- Langfuse Observability (Get these from Langfuse UI at http://localhost:3000) ----
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=http://langfuse:3000

# ---- Security ----
API_KEY=your_api_key_for_chat_endpoint
ADMIN_API_KEY=your_admin_api_key

# ---- Optional Settings ----
DEBUG=True
ENVIRONMENT=development
LOG_LEVEL=INFO 